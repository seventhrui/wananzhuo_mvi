<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NavigationBarLottieItem">

        <!--lottie datajson-->
        <attr name="navigation_lottie_json_data" format="string"/>
        <!--lottie image path -->
        <attr name="navigation_lottie_image_path" format="string"/>

        <!--设置图标的宽度-->
        <attr name="navigation_lottie_iconWidth" format="dimension"/>
        <!--设置图标的高度-->
        <attr name="navigation_lottie_iconHeight" format="dimension"/>

        <!--图标距离底部的距离-->
        <attr name="navigation_lottie_iconMarginBottom" format="dimension"/>

        <!--设置未读数字体大小-->
        <attr name="navigation_lottie_unreadTextSize" format="dimension"/>
        <!--设置未读数字体颜色-->
        <attr name="navigation_lottie_unreadTextColor" format="reference"/>
        <!--设置未读数背景色-->
        <attr name="navigation_lottie_unreadTextBg" format="reference"/>

        <!--设置提示消息字体大小-->
        <attr name="navigation_lottie_msgTextSize" format="dimension"/>
        <!--设置提示消息字体颜色-->
        <attr name="navigation_lottie_msgTextColor" format="reference"/>
        <!--设置提示消息背景-->
        <attr name="navigation_lottie_msgTextBg" format="reference"/>

        <!--设置提示点背景-->
        <attr name="navigation_lottie_notifyPointBg" format="reference"/>

        <!--设置Tab Title-->
        <attr name="navigation_lottie_title" format="string"/>
        <attr name="navigation_lottie_titleSelectTextColor" format="color|reference"/>
        <attr name="navigation_lottie_titleUnSelectTextColor" format="color|reference"/>
        <attr name="navigation_lottie_titleTextSize" format="dimension|reference"/>

        <!--设置未读数组阈值 大于阈值的数字将显示为 n+ n为设置的阈值-->
        <attr name="navigation_lottie_unreadThreshold" format="integer"/>
    </declare-styleable>

    <declare-styleable name="NavigationBarLottieLayout">
        <attr name="navigation_lottie_smoothScroll" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="QMUIPullRefreshLayout">
        <!--下拉阻率取决于灵敏性，可以下拉更多距离-->
        <attr name="qmui_refresh_drag_rate" format="float"/>
        <!-- RefreshView的初始offset -->
        <attr name="qmui_refresh_init_offset" format="dimension"/>
        <!-- 刷新时RefreshView的offset -->
        <attr name="qmui_refresh_end_offset" format="dimension"/>
        <!-- TargetView(ListView或者ScrollView等)的初始位置 -->
        <attr name="qmui_target_init_offset" format="dimension"/>
        <!-- 刷新时TargetView(ListView或者ScrollView等)的位置-->
        <attr name="qmui_target_refresh_offset" format="dimension"/>
        <!-- 是否自动根据RefreshView的高度计算RefreshView的初始位置-->
        <attr name="qmui_auto_calculate_refresh_init_offset" format="boolean"/>
        <!-- 是否自动根据TargetView在刷新时的位置计算RefreshView的结束位置-->
        <attr name="qmui_auto_calculate_refresh_end_offset" format="boolean"/>
        <!-- TargetView的刷新位置与RefreshView高度相等-->
        <attr name="qmui_equal_target_refresh_offset_to_refresh_view_height" format="boolean"/>
    </declare-styleable>
    <attr name="QMUIPullRefreshLayoutStyle" format="reference"/>
</resources>